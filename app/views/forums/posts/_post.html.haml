- post_p = present(post)

.panel.panel-default
  %div{ id: "post_#{post.id}" }
  .panel-heading.clearfix

    - if user_can_edit_post?(post)
      .pull-right
        = link_to post_p.edit_path, class: 'btn btn-link btn-md' do
          %span.glyphicon.glyphicon-cog

    .pull-right
      = link_to "#post_#{post.id}", class: 'btn btn-link btn-md' do
        %span.glyphicon.glyphicon-link
        = post_p.created_at

    = render 'users/listing', user: post.created_by

.container-fluid.markdown
  = post_p.content

  .clearfix
    %button.pull-right.btn.btn-default.btn-xs{ data: { quote: { id: quote_id, text: post_p.quote } } }
      Quote

